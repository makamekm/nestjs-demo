{
  "name": "root",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "clean": "rimraf ./packages/api/public",
    "build": "run-s bootstrap clean build:packages build:combine",
    "build:packages": "lerna run build --stream",
    "build:combine": "ncp ./packages/ui/build ./packages/api/public",
    "start": "lerna run start:prod --stream",
    "start:build": "run-s build start",
    "fix": "lerna run fix --stream",
    "test": "lerna exec npm run test --concurrency 1",
    "dev": "cross-env CI=true lerna run start --stream",
    "commit": "cz",
    "semantic-release": "semantic-release"
  },
  "devDependencies": {
    "lerna": "^3.22.1",
    "npm-run-all": "^4.1.5",
    "ncp": "^2.0.0",
    "rimraf": "^3.0.2",
    "cross-env": "^7.0.2",
    "commitizen": "^4.2.1",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^3.1.0",
    "semantic-release": "^17.1.2",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/npm": "^7.0.6",
    "@semantic-release/release-notes-generator": "^9.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lerna run --concurrency 1 --stream precommit --since HEAD --exclude-dependents",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "CHANGELOG.md"
        }
      ],
      "@semantic-release/git"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
